<!doctype html>
<html lang="{{ request.locale.iso_code }}">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ 'gift_cards.issued.title' | t }} - {{ shop.name }}</title>
  {{ 'theme.css' | asset_url | stylesheet_tag }}
</head>
<body style="background:#f8f9fa;padding:40px 20px;">
  <div style="max-width:500px;margin:0 auto;background:#fff;border-radius:12px;padding:40px;text-align:center;box-shadow:0 4px 20px rgba(0,0,0,0.08);">
    <h1 style="font-size:1.5rem;margin-bottom:8px;">Paint Your Own Gift Card</h1>
    <p style="color:#636E72;margin-bottom:24px;">Give the gift of creativity</p>

    <div style="background:linear-gradient(135deg,#FF6B35,#4ECDC4);border-radius:12px;padding:40px;color:#fff;margin-bottom:24px;">
      <p style="font-size:2.5rem;font-weight:700;">{{ gift_card.balance | money }}</p>
      <p style="margin-top:16px;font-size:1rem;letter-spacing:2px;font-family:monospace;">{{ gift_card.code | format_code }}</p>
    </div>

    {%- if gift_card.pass_url -%}
      <a href="{{ gift_card.pass_url }}" style="display:inline-block;margin-bottom:16px;">Add to Apple Wallet</a>
    {%- endif -%}

    <p style="color:#636E72;font-size:0.875rem;">
      {%- if gift_card.expired -%}
        This gift card expired on {{ gift_card.expires_on | date: "%B %d, %Y" }}.
      {%- elsif gift_card.expires_on -%}
        Expires {{ gift_card.expires_on | date: "%B %d, %Y" }}
      {%- endif -%}
    </p>

    <a href="{{ shop.url }}" class="btn btn--primary" style="margin-top:24px;display:inline-flex;">Shop Now</a>

    <div style="margin-top:24px;">
      <button onclick="window.print();" style="font-size:0.875rem;color:#636E72;text-decoration:underline;background:none;border:none;cursor:pointer;">
        Print this card
      </button>
    </div>
  </div>
</body>
</html>
