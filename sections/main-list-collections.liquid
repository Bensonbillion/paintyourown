<section class="collection-page">
  <div class="container">
    <div class="collection-page__header">
      <h1 class="collection-page__title">Our Collections</h1>
      <p class="collection-page__description">Browse our complete range of paint-your-own figurines, bundles, and kits.</p>
    </div>

    <div class="collection-tiles">
      {%- for collection in collections -%}
        {%- unless collection.handle == 'all' -%}
          <a href="{{ collection.url }}" class="collection-tile">
            {%- if collection.image -%}
              <img class="collection-tile__image"
                   src="{{ collection.image | image_url: width: 600 }}"
                   alt="{{ collection.title | escape }}"
                   loading="lazy"
                   width="600"
                   height="450">
            {%- elsif collection.products.first.featured_image -%}
              <img class="collection-tile__image"
                   src="{{ collection.products.first.featured_image | image_url: width: 600 }}"
                   alt="{{ collection.title | escape }}"
                   loading="lazy"
                   width="600"
                   height="450">
            {%- else -%}
              {{ 'collection-1' | placeholder_svg_tag: 'collection-tile__image' }}
            {%- endif -%}
            <div class="collection-tile__overlay">
              <h3 class="collection-tile__title">{{ collection.title }}</h3>
              <p class="collection-tile__price">{{ collection.products_count }} products</p>
            </div>
          </a>
        {%- endunless -%}
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Collections List",
  "settings": []
}
{% endschema %}
