<section class="section">
  <div class="container">
    {%- if section.settings.title != blank -%}
      <div class="section__header">
        <h2 class="section__title">{{ section.settings.title }}</h2>
        {%- if section.settings.subtitle != blank -%}
          <p class="section__subtitle">{{ section.settings.subtitle }}</p>
        {%- endif -%}
      </div>
    {%- endif -%}

    <div class="collection-tiles">
      {%- for block in section.blocks -%}
        <a href="{{ block.settings.link }}" class="collection-tile" {{ block.shopify_attributes }}>
          {%- if block.settings.image != blank -%}
            <img class="collection-tile__image"
                 src="{{ block.settings.image | image_url: width: 600 }}"
                 alt="{{ block.settings.title | escape }}"
                 loading="lazy"
                 width="600"
                 height="450">
          {%- else -%}
            {{ 'collection-' | append: forloop.index | placeholder_svg_tag: 'collection-tile__image' }}
          {%- endif -%}
          <div class="collection-tile__overlay">
            <h3 class="collection-tile__title">{{ block.settings.title }}</h3>
            {%- if block.settings.price_text != blank -%}
              <p class="collection-tile__price">{{ block.settings.price_text }}</p>
            {%- endif -%}
          </div>
        </a>
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Collection Tiles",
  "class": "collection-tiles-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section title"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Section subtitle"
    }
  ],
  "blocks": [
    {
      "type": "tile",
      "name": "Collection tile",
      "limit": 4,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Collection"
        },
        {
          "type": "text",
          "id": "price_text",
          "label": "Price text",
          "default": "From $25"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Collection Tiles",
      "blocks": [
        { "type": "tile", "settings": { "title": "Twin Sets", "price_text": "From $99" } },
        { "type": "tile", "settings": { "title": "Party Packs", "price_text": "From $180" } },
        { "type": "tile", "settings": { "title": "Shop All Figures", "price_text": "From $25" } }
      ]
    }
  ]
}
{% endschema %}
