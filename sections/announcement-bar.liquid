{%- if settings.announcement_bar_enabled -%}
<div class="announcement-bar" role="region" aria-label="Announcement">
  <div class="announcement-bar__messages" data-announcement-bar>
    {%- if settings.announcement_text_1 != blank -%}
      <div class="announcement-bar__message is-active">{{ settings.announcement_text_1 }}</div>
    {%- endif -%}
    {%- if settings.announcement_text_2 != blank -%}
      <div class="announcement-bar__message">{{ settings.announcement_text_2 }}</div>
    {%- endif -%}
    {%- if settings.announcement_text_3 != blank -%}
      <div class="announcement-bar__message">{{ settings.announcement_text_3 }}</div>
    {%- endif -%}
  </div>
</div>
{%- endif -%}

{% schema %}
{
  "name": "Announcement Bar",
  "class": "announcement-bar-section",
  "settings": []
}
{% endschema %}
